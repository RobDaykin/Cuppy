<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<context:component-scan base-package="de.hybris.platform.cuppytrail" />

	<!-- The hybris platform provides one single Spring application context 
		for beans located at the jalo layer. Each extension can add beans to this 
		context by specifying them at this configuration file. You can use and/or 
		redefine beans defined at configuration files of other extensions as well 
		as adding new one. If you want to locate this file at a different location 
		or want to use several files for better, structuring, please use the '<yourextension>.application-context' 
		property at your project.properties file. There you can specify a comma separated 
		list of files where first is tried to find a file per classpath and then 
		per file system. If you want to configure beans for your web module please 
		have a look at your web/webroot/WEB-INF/<extname>-web-spring.xml. -->

	<!-- Example how to override a manager -->
	<!-- <bean id="core.productManager" class="de.hybris.platform.cuppytrail.jalo.CuppytrailProductManager" 
		init-method="init" destroy-method="destroy" /> -->

	<alias name="defaultStadiumService" alias="stadiumService" />
	<bean id="defaultStadiumService"
		class="de.hybris.platform.cuppytrail.impl.DefaultStadiumService">
		<property name="stadiumDAO" ref="stadiumDAO" />
	</bean>

	<alias name="defaultStadiumFacade" alias="stadiumFacade" />
	<bean id="defaultStadiumFacade"
		class="de.hybris.platform.cuppytrail.facades.impl.DefaultStadiumFacade">
		<property name="stadiumService" ref="stadiumService"></property>
	</bean>

	<bean id="cuppytrailSystemSetup"
		class="de.hybris.platform.cuppytrail.systemsetup.CuppyTrailSystemSetup"
		scope="tenant">
		<property name="importService" ref="importService" />
	</bean>

	<bean id="StadiumInterceptorMapping"
		class="de.hybris.platform.servicelayer.interceptor.impl.InterceptorMapping">
		<property name="interceptor" ref="stadiumCapacityInterceptor" />
		<property name="typeCode" value="Stadium" />
	</bean>

	<bean id="registrationConfirmationActionJob"
		class="de.hybris.platform.cuppytrail.workflow.RegistrationConfirmationActionJob"
		scope="tenant">
		<property name="modelService" ref="modelService" />
		<property name="mailService" ref="mailService" />
	</bean>

	<bean id="registrationDeclineActionJob"
		class="de.hybris.platform.cuppytrail.workflow.RegistrationDeclineActionJob"
		scope="tenant">
		<property name="modelService" ref="modelService" />
		<property name="mailService" ref="mailService" />
	</bean>
	
	<bean id="playerVoidInterceptorMapping" class="de.hybris.platform.servicelayer.interceptor.impl.InterceptorMapping">
        <property name="interceptor" ref="VoidInterceptor" />
        <property name="typeCode" value="Player" />
        <property name="replacedInterceptors" ref="playerConfirmedInterceptor"/>
    </bean>

	<bean id="sendRankingJob" class="de.hybris.platform.cuppytrail.jobs.SendRankingJob"
		autowire="byName" />

	<bean id="stadiumCapacityInterceptor"
		class="de.hybris.platform.cuppytrail.interceptors.StadiumCapacityInterceptor" />

	<bean id="stadiumListener"
		class="de.hybris.platform.cuppytrail.events.StadiumEventListener" />
		
	<bean id="playerService" class="de.hybris.platform.cuppytrail.impl.CuppytrailPlayerService" />

